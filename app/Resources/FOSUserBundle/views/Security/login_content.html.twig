{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">

    <form action="{{ path("fos_user_security_check") }}" method="post" class="login-form">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="login-wrap">
            <p class="login-img"><img src="{{ asset('img/eni.png') }}" width="75" height="75"></p>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_profile"></i></span>
                <input class="form-control" placeholder="Adresse mail" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                <input  class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" required="required" />
            </div>
            <div class="input-group">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                <span> <a href="{{ path('fos_user_resetting_request') }}"> Mot de passe oubli√© ?</a></span>
            </div>
            <input class="btn btn-primary btn-lg btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </form>
</div>